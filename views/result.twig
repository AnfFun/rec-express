{% extends "layout.twig" %}

{% block body %}

<h1> Результат пошуку: </h1>

<table>
    {% for system in systems %}
        <tr>
            <td><h2>{{ system.title }}</h2></td>
            <td>
                <div class="polygon"
                     style ="clip-path: polygon(50% 0%, 80% 10%, 100% 35%, 100% 70%, 80% 90%, 50% 100%, 20% 90%, 0% 70%, 0% 35%, 20% 10%);">


                    {#360/total*i #}
                </div>
            </td>
        </tr>
    {% endfor %}
</table>

{% endblock %}